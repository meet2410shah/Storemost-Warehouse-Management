<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>

  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/Farmer/CropList.css">
</head>

<body>


  <div class="topBar">
    <img src="/images/sort.svg" class="topBar-openbtn" onclick="openNav()" />
    <img src="/images/SM-Warehouse-Logo.png" class="topBar-storeMostLogo" />
  </div>



  <div class="sideBar">
    <div class="sideLogo">
      <a href="<%= data.URL %>/farmer/getProfile"><img src="/images/image.png" class="buttonclass person-image" /></a>
    </div>
    <div class="sideLogo">
      <a href="<%= data.URL %>/farmer/getCrops"><img src="/images/48-512.png" class="buttonclass cropAdjust1" /></a>
    </div>
    <div class="sideLogo">
      <a href="<%= data.URL %>/farmer/getWarehouses"><img src="/images/inventory.svg" class="buttonclass" /></a>
    </div>
    <div class="sideLogo">
      <a href="<%= data.URL %>/farmer/getPayment"> <img src="/images/receipt-24px.svg" class="buttonclass" /></a>
    </div>
    <div class="sideLogo">
      <a href="<%= data.URL %>/farmer/logout"> <img src="/images/logout.svg" class="buttonclass" /></a>
    </div>
  </div>


  <div id="mySidepanel" class="sidepanel">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <div class="sideBox">
      <img src="/images/image.png" alt="User Logo" class="userLogo">
      <p class="userName">
        <% if(data) { %>
          <%= data.farmer.firstName %>
            <%= data.farmer.lastName %>
              <% } %>
      </p>
      <p class="userDesig">Farmer</p>

      <table class="table">
        <tbody>
          <tr>
            <td class="leftBox"><img src="/images/image.png" alt="" class="userOptionProfile"></td>
            <td class="rightBox adjust">
              <p> <a href="<%= data.URL %>/farmer/getProfile"> Profile </a></p>
            </td>
          </tr>
          <tr>
            <td class="leftBox"><img src="/images/48-512.png" alt="" class="userOption cropAdjust"></td>
            <td class="rightBox">
              <p><a href="<%= data.URL %>/farmer/getCrops"> My Crops </a></p>
            </td>
          </tr>
          <tr>
            <td class="leftBox"><img src="/images/inventory.svg" alt="" class="userOption"></td>
            <td class="rightBox">
              <p><a href="<%= data.URL %>/farmer/getWarehouses"> Warehouses </a></p>
            </td>
          </tr>
          <tr>
            <td class="leftBox"><img src="/images/receipt-24px.svg" alt="" class="userOption"></td>
            <td class="rightBox">
              <p><a href="<%= data.URL %>/farmer/getPayment"> Payment </a></p>
            </td>
          </tr>
          <tr>
            <td class="leftBox"><img src="/images/logout.svg" alt="" class="userOption"></td>
            <td class="rightBox">
              <p><a href="<%= data.URL %>/farmer/logout"> Logout </a></p>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>








  <!-- <div class = "mainBackground">






      </div> -->








  <div class="background3">
    <!--title-->
    <div>
      <h1 class="title3">My Crops</h1>
    </div>

    <!--Crops List-->
    <div class="contenar">



      <% data.crops.forEach(function(crop) { %>


        <!--1-->
        <div class="contan3">
          <p class="divimg">
            <a href="<%= data.URL %>/farmer/getCrop?cropid=<%= crop._id %>" target="_top">
              <img src="/images/crop.png" class="crop-img" />
            </a>
          </p>
          <p class="par3">
            <%= crop.cropType %>
          </p>
          <p class="pargraph3">
            <%= crop.quantity %> Quintal
          </p>
          <p class="pargraph3">
            <%= crop.depositDate.toString().substring(4,15) %> to <%= crop.dueDate.toString().substring(4,15) %>
          </p>
        </div>

        <% }); %>


    </div>
  </div>

  <script src="/css/TopSideBar.js" charset="utf-8"></script>


</body>

</html>